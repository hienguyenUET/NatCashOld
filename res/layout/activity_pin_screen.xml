<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PinScreen">

    <TextView
        android:id="@+id/hello"
        android:layout_width="68dp"
        android:layout_height="32dp"
        android:layout_marginStart="153dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="154dp"
        android:layout_marginBottom="658dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:lineHeight="32dp"
        android:text="Hello!"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textFontWeight="700"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="TextViewEdits"
        tools:targetApi="p" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="67dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="620dp"
        android:fontFamily="sans-serif"
        android:lineHeight="24dp"
        android:text="TextView"
        android:textColor="#F28230"
        android:textFontWeight="700"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hello"
        tools:ignore="TextViewEdits"
        tools:targetApi="p" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pin_code_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="296dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintVertical_bias="0.214">

        <EditText
            android:id="@+id/firstPinCode"
            android:layout_width="46dp"
            android:layout_height="56dp"
            android:ems="10"
            android:focusable="auto"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="2"
            android:nextFocusRight="@id/secondPinCode"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/secondPinCode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/secondPinCode"
            android:layout_width="46dp"
            android:layout_height="56dp"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:ems="10"
            android:focusable="true"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="2"
            android:nextFocusRight="@id/thirdPinCode"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/thirdPinCode"
            app:layout_constraintStart_toEndOf="@+id/firstPinCode"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/thirdPinCode"
            android:layout_width="46dp"
            android:layout_height="56dp"
            android:layout_marginStart="13dp"
            android:ems="10"
            android:focusable="true"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="2"
            android:nextFocusRight="@id/fourthPinCode"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/secondPinCode"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/fourthPinCode"
            android:layout_width="46dp"
            android:layout_height="56dp"
            android:layout_marginStart="13dp"
            android:ems="10"
            android:focusable="true"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="2"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/thirdPinCode"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="59dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="sans-serif"
        android:textFontWeight="500"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:lineHeight="24dp"
        android:text="Please enter your account PIN to login"
        app:layout_constraintBottom_toTopOf="@+id/pin_code_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name"
        tools:targetApi="p" />

</androidx.constraintlayout.widget.ConstraintLayout>