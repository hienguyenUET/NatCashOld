<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FirstOnBoardingFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/onboarding_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:src="@drawable/first_onboarding_img" />

    <TextView
        android:id="@+id/onboarding_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif"
        android:textFontWeight="700"
        android:textColor="@color/black"
        android:lineHeight="32dp"
        android:textSize="24sp"
        android:text="Super utility"
        android:textAlignment="center"
        tools:ignore="HardcodedText"
        tools:targetApi="p" />

    <TextView
        android:id="@+id/onboarding_description"
        android:layout_width="321dp"
        android:layout_height="72dp"
        android:layout_gravity="center"
        android:layout_marginStart="27dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="27dp"
        android:fontFamily="sans-serif"
        android:lineHeight="24dp"
        android:text="Easy to use, high security, support multiple platforms. Payment, transfer money anytime, anywhere !"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textFontWeight="400"
        android:textSize="14sp"
        tools:ignore="HardcodedText"
        tools:targetApi="p" />

</LinearLayout>